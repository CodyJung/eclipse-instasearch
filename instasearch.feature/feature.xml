      <import plugin="org.eclipse.core.net"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.resources" match="greaterOrEqual"/>
      <import plugin="org.eclipse.search"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.debug.ui"/>
   </requires>

   <plugin
         id="it.unibz.instasearch"
         download-size="0"
         install-size="0"
         version="1.3.2"
         unpack="false"/>

   <data
         id="epl-v10.html"
         download-size="0"
         install-size="0"/>

